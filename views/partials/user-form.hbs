<div class="col-4">

    <div class="form-floating h-50  mb-3">
        <input type="text" class="form-control" id="floatingInput" value="{{this.name}}" placeholder="Name" name="name">
        <label for="floatingInput">Name</label>
    </div>
</div>
<div class="col-4">

    <div class="form-floating h-50  mb-3">
        <input type="text" class="form-control" id="floatingInput" value="{{this.city}}" placeholder="City" name="city">
        <label for="floatingInput">City</label>
    </div>
</div>
<div class="col-4">

    <div class="form-floating h-50  mb-3">
        <input type="email" class="form-control" id="floatingInput" value="{{this.mail}}" placeholder="E-mail" name="mail">
        <label for="floatingInput">E-mail</label>
    </div>
</div>

<div class="col-12">

    <div class="form-floating">
        <textarea class="form-control" placeholder="Leave a comment here" name="comments" id="floatingTextarea2" style="height: 200px">{{this.comments}}</textarea>
        <label for="floatingTextarea2">Comments</label>
    </div>
</div>
<div class="col-12 d-grid">
    <button class="btn btn-primary" type="submit">Submit</button>
</div>